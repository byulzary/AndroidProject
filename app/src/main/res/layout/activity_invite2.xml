<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#557BC6"

    tools:context=".InviteActivity">

    <Button
        android:id="@+id/inviteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Invite"
        app:layout_constraintEnd_toEndOf="@+id/inviteDescription"
        app:layout_constraintStart_toStartOf="@+id/inviteDescription"
        app:layout_constraintTop_toBottomOf="@+id/inviteDescription" />

    <EditText
        android:id="@+id/inviteDescription"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Enter Additional Details"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/addressText"
        app:layout_constraintStart_toStartOf="@+id/addressText"
        app:layout_constraintTop_toBottomOf="@+id/addressText" />

    <EditText
        android:id="@+id/addressText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Enter Address"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/inviteeName"
        app:layout_constraintStart_toStartOf="@+id/inviteeName"
        app:layout_constraintTop_toBottomOf="@+id/inviteeName" />

    <TextView
        android:id="@+id/inviteeName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>